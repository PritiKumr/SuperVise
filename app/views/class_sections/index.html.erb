<p id="notice"><%= notice %></p>

<h1>Listing Class Sections</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @class_sections.each do |class_section| %>
      <tr>
        <td><%= class_section.name %></td>
        <td><%= link_to 'Show', class_section %></td>
        <td><%= link_to 'Edit', edit_class_section_path(class_section) %></td>
        <td><%= link_to 'Destroy', class_section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

